<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_graph"
    app:startDestination="@id/settingsMainFragment">

    <action
        android:id="@+id/action_settings_to_profile"
        app:destination="@id/profileFragment"
        app:popUpTo="@id/settingsMainFragment"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_settings_to_profile_popup_home"
        app:destination="@id/profileFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="false" />

    <fragment
        android:id="@+id/settingsMainFragment"
        android:name="com.example.naving.SettingsMainFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings_main" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.naving.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <argument
            android:name="userId"
            app:argType="integer" />

        <argument
            android:name="userName"
            app:argType="string" />

        <deepLink app:uri="naving://profile/{userId}/{userName}" />
    </fragment>

</navigation>
